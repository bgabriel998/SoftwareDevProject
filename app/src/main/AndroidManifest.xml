<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.epfl.sdp.peakar">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"  />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:remove="android:appComponentFactory">
        <activity android:name="ch.epfl.sdp.peakar.user.friends.AddFriendActivity"/>
        <activity android:name="ch.epfl.sdp.peakar.user.friends.FriendItemActivity"/>
        <activity android:name="ch.epfl.sdp.peakar.user.friends.FriendsActivity"/>
        <activity android:name="ch.epfl.sdp.peakar.gallery.ImageActivity"/>
        <activity android:name="ch.epfl.sdp.peakar.gallery.GalleryActivity" />
        <activity android:name="ch.epfl.sdp.peakar.camera.CameraActivity" />
        <activity android:name="ch.epfl.sdp.peakar.collection.MountainActivity" />
        <activity android:name="ch.epfl.sdp.peakar.collection.CollectionActivity" />
        <activity android:name="ch.epfl.sdp.peakar.rankings.RankingsActivity" />
        <activity android:name="ch.epfl.sdp.peakar.map.MapActivity" />
        <activity android:name="ch.epfl.sdp.peakar.user.profile.ProfileActivity" />
        <activity android:name="ch.epfl.sdp.peakar.general.SettingsActivity" />
        <activity android:name="ch.epfl.sdp.peakar.general.MainMenuActivity" />
        <activity android:name="ch.epfl.sdp.peakar.general.InitActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>