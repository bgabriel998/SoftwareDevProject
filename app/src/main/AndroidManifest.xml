<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.epfl.sdp.peakar">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/peak_ar_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:remove="android:appComponentFactory">
        <activity android:name=".social.SocialActivity"/>
        <activity
            android:name=".user.profile.ProfileLauncherActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity android:name=".user.profile.NewProfileActivity" />
        <activity android:name=".user.friends.AddFriendActivity" />
        <activity android:name=".user.friends.FriendItemActivity" />
        <activity android:name=".user.friends.FriendsActivity" />
        <activity android:name=".gallery.ImageActivity" />
        <activity android:name=".gallery.GalleryActivity" />
        <activity android:name=".camera.CameraActivity" />
        <activity android:name=".collection.MountainActivity" />
        <activity android:name=".collection.CollectionActivity" />
        <activity android:name=".rankings.RankingsActivity" />
        <activity android:name=".map.MapActivity" />
        <activity android:name=".user.profile.ProfileActivity" />
        <activity android:name=".general.SettingsActivity" />
        <activity android:name=".general.SettingsMapActivity" />
        <activity android:name=".general.MainMenuActivity" />
        <activity
            android:name=".general.InitActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>