<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="ch.epfl.sdp.peakar.collection.MountainActivity">

    <!-- Toolbar -->
    <include layout="@layout/toolbar"/>

    <!-- Info text container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Points -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/LargeText.DarkGreen"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/points__mountain_category" />

            <TextView
                android:id="@+id/pointText"
                style="@style/LargeText.DarkGreen"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/LargeText.DarkGreen"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/height_mountain_category" />

            <TextView
                android:id="@+id/heightText"
                style="@style/LargeText.DarkGreen"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Position -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/LargeText.DarkGreen"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/position_mountain_category" />

            <TextView
                android:id="@+id/positionText"
                style="@style/LargeText.DarkGreen"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>