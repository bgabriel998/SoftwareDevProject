<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cameraLayout"
    tools:context=".Button1Activity">

    <!-- Camera-preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </androidx.camera.view.PreviewView>

    <!-- Compass View-->
    <com.github.bgabriel998.softwaredevproject.CompassView
        android:id="@+id/compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Image button to take a picture, ratio of the button image is 1.3 -->
    <ImageButton
        android:id="@+id/takePicture"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:background="@drawable/take_photo_button"
        android:layout_marginBottom="10dp"
        android:onClick="takePicture"
        app:layout_constraintBottom_toBottomOf="@+id/compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

<!--    <ImageButton-->
<!--        android:id="@+id/takePicture2"-->
<!--        android:layout_width="65dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:background="@drawable/take_photo_button"-->
<!--        android:layout_marginEnd="10dp"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <!--TextView indicates the horizontal degrees and the direction in which the user is heading-->
    <TextView
        android:id="@+id/headingHorizontal"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="top"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--TextView indicates the vertical degrees-->
    <TextView
        android:id="@+id/headingVertical"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/headingHorizontal"
        android:layout_below="@+id/headingHorizontal"
        android:gravity="top"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headingHorizontal"
        />

    <!--TextView indicates the vertical degrees-->
    <TextView
        android:id="@+id/fovHorizontal"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/headingVertical"
        android:layout_below="@+id/headingVertical"
        android:gravity="top"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headingVertical"
        />

    <!--TextView indicates the vertical degrees-->
    <TextView
        android:id="@+id/fovVertical"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fovHorizontal"
        android:layout_below="@+id/fovHorizontal"
        android:gravity="top"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fovHorizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>