<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">

    <!-- Toolbar -->
    <include layout="@layout/toolbar"/>

    <!-- Sign in Button -->
    <Button
        android:id="@+id/signInButton"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        style="@style/ButtonLightGreen"
        android:text="@string/sign_in_button"
        android:onClick="signInButton" />

    <!-- Change username -->
    <Button
        android:id="@+id/changeUsernameButton"
        android:layout_height="70dp"
        android:layout_width="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ButtonGrey"
        android:text="Change the username"
        android:onClick="changeUsernameButton" />

    <Button
        android:id="@+id/submitUsernameButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ButtonDarkGreen"
        android:text="Submit"
        android:onClick="submitUsernameButton" />

    <!-- Sign out button -->
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        style="@style/ButtonDarkGreen"
        android:text="@string/sign_out_button"
        android:onClick="signOutButton" />

    <EditText
        android:id="@+id/editTextUsername"
        android:imeOptions="actionDone"
        android:layout_height="70dp"
        android:layout_width="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Insert your username here"
        style="@style/ButtonGrey" />

</androidx.constraintlayout.widget.ConstraintLayout>

